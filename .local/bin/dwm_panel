#!/bin/sh

if [ $(pgrep -x dwm_panel | wc -l) -ne 2 ]; then
    echo "dwm_panel already running" >&2
    exit 1
fi

while true; do
    DATE="$(date +"%a %-d %b  %H:%M")"
    BAT_LEVEL="$(cat /sys/class/power_supply/BAT0/capacity)"

    if ! xsetroot -name " Date: $DATE | Bat: $BAT_LEVEL%" 2>/dev/null; then
        break;
    fi
    sleep 2s
done &
