#!/bin/sh

PIDFILE="${XDG_RUNTIME_DIR:-/var/run/user/$(id -ru)}/aniwal-pids"

_close_running() {
    if [ -e "$PIDFILE" ]; then
        while read P; do
            [ "$(ps -p "$P" -o comm=)" = "xwinwrap" ] && kill "$P"
        done < "$PIDFILE" && rm -f "$PIDFILE"
    fi
}

_setwal() {
    xwinwrap -fdt -nf -un -ov -ni -fs -- mpv --no-stop-screensaver             \
        --no-osd-bar --no-terminal --no-input-default-bindings                 \
        --no-keepaspect --loop --fullscreen -wid WID "$1" 2>/dev/null &

    echo "$!" >| "$PIDFILE"
}


for ARG in "$@"; do
    if [ "$ARG" = '--stop' ]; then
        _close_running
        exit
    fi
done

_close_running
sleep 0.5
_setwal "$1"
